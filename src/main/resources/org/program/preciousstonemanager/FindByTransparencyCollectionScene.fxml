<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="540.0" prefWidth="720.0" style="-fx-background-color: LIGHTSKYBLUE;"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="org.program.preciousstonemanager.controller.collection.FindByTransparencyCollectionController">
    <children>
        <ImageView fitHeight="500.0" fitWidth="680.0" layoutX="21.0" layoutY="20.0" pickOnBounds="true" smooth="false">
            <image>
                <Image url="@../files/images/background.png"/>
            </image>
        </ImageView>
        <Button layoutX="432.0" layoutY="315.0" mnemonicParsing="false" onAction="#findByTransparency" prefHeight="60.0"
                prefWidth="256.0" text="Знайти за прозорістю">
            <font>
                <Font name="Arial Black" size="15.0"/>
            </font>
        </Button>
        <Button layoutX="432.0" layoutY="383.0" mnemonicParsing="false" onAction="#goBack" prefHeight="60.0"
                prefWidth="256.0" text="Назад">
            <font>
                <Font name="Arial Black" size="15.0"/>
            </font>
        </Button>
        <Label alignment="TOP_CENTER" layoutX="21.0" layoutY="60.0" prefHeight="71.0" prefWidth="680.0"
               text="Знайти за прозорістю" textFill="#77d4ff" wrapText="true">
            <font>
                <Font name="Arial Black" size="40.0"/>
            </font>
        </Label>
        <TableView fx:id="stonesTable" layoutX="32.0" layoutY="150.0" prefHeight="330.0" prefWidth="381.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="94.0" text="Назва"/>
                <TableColumn fx:id="colorColumn" minWidth="0.0" prefWidth="65.0" text="Колір"/>
                <TableColumn fx:id="weightColumn" prefWidth="61.0" text="Вага(ct)"/>
                <TableColumn fx:id="valueColumn" prefWidth="62.0" text="Ціна($)"/>
                <TableColumn fx:id="transparencyColumn" prefWidth="98.0" text="Прозорість(%)"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Label layoutX="432.0" layoutY="184.0" text="Введіть нижню межу пошуку:" textFill="#77d4ff">
            <font>
                <Font name="Arial Black" size="15.0"/>
            </font>
        </Label>
        <Label layoutX="434.0" layoutY="245.0" text="Введіть верхню межу пошуку:" textFill="#77d4ff">
            <font>
                <Font name="Arial Black" size="15.0"/>
            </font>
        </Label>
        <TextField fx:id="lowerBorderTextField" layoutX="432.0" layoutY="207.0" prefHeight="25.0" prefWidth="256.0"/>
        <TextField fx:id="upperBorderTextField" layoutX="432.0" layoutY="268.0" prefHeight="25.0" prefWidth="256.0"/>
    </children>
</AnchorPane>
